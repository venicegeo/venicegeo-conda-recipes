#!/usr/bin/groovy

node {
    def root = pwd()

    stage("Setup") {
        deleteDir()
        git url: "https://github.com/venicegeo/venicegeo-conda-recipes", branch: "master"
        sh "./init.sh"
        sh "git submodule"
    }
    
    stage("Docker") {
        sh """mkdir -p docker/share
          mv recipes docker/share/
          mv  vendor docker/share/"""
        dir("docker") {
            sh """docker-compose rm -f --all
              docker-compose up --build --no-color"""
        }
    }
    
    stage("Nexus Deploy") {
        dir ("docker/share") {
            withCredentials([[$class: 'UsernamePasswordMultiBinding', credentialsId: credentialsId: "${env.ARTIFACT_STORAGE_CREDS}", usernameVariable: 'NEXUSUSER', passwordVariable: 'NEXUSPASS']]) {
                sh "bash nexus-deploy.sh"
            }
        }
    }
}
